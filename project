import tkinter
import tkinter.ttk
import random

window1 = tkinter.Tk()
window1.geometry("500x300")
window1.title("Проверка знаний")

label31=tkinter.Label(window1, text="ФИО")
label31.grid(row=0,column=0)

entry31 = tkinter.Entry(window1)
entry31.grid(row=1,column=0)

label32=tkinter.Label(window1, text="Внимание! При введении ответа правописание влияет на его правильность!")
label32.grid(row=2,column=0)

label33=tkinter.Label(window1, text="Выберете область вопросов:")
label33.grid(row=3,column=0)

###окно европа

def EUROPA():
    A=list(europe.keys()) 
    window1.destroy
    window = tkinter.Tk()
    window.geometry("350x350")
    window.title("Проверка знаний")

    label1=tkinter.Label(window, text="Страна")
    label1.grid(row=0,column=0)

    label2=tkinter.Label(window, text="Столица")
    label2.grid(row=0,column=1)

    f1=random.choice(A)
    A.remove(f1)

    f2=random.choice(A)
    A.remove(f2)

    f3=random.choice(A)
    A.remove(f3)

    f4=random.choice(A)
    A.remove(f4)

    f5=random.choice(A)
    A.remove(f5)
    
    f6=random.choice(A)
    A.remove(f6)

    f7=random.choice(A)
    A.remove(f7)

    f8=random.choice(A)
    A.remove(f8)

    f9=random.choice(A)
    A.remove(f9)

    f10=random.choice(A)
    A.remove(f10)

    label3=tkinter.Label(window, text=f1)
    label3.grid(row=1,column=0)

    label4=tkinter.Label(window, text=f2)
    label4.grid(row=2,column=0)

    label5=tkinter.Label(window, text=f3)
    label5.grid(row=3,column=0)

    label6=tkinter.Label(window, text=f4)
    label6.grid(row=4,column=0)

    label7=tkinter.Label(window, text=f5)
    label7.grid(row=5,column=0)

    label8=tkinter.Label(window, text=f6)
    label8.grid(row=6,column=0)

    label9=tkinter.Label(window, text=f7)
    label9.grid(row=7,column=0)

    label10=tkinter.Label(window, text=f8)
    label10.grid(row=8,column=0)

    label11=tkinter.Label(window, text=f9)
    label11.grid(row=9,column=0)

    label12=tkinter.Label(window, text=f10)
    label12.grid(row=10,column=0)

    entry3 = tkinter.Entry(window)
    entry3.grid(row=1,column=1)

    entry4 = tkinter.Entry(window)
    entry4.grid(row=2,column=1)

    entry5 = tkinter.Entry(window)
    entry5.grid(row=3,column=1)

    entry6 = tkinter.Entry(window)
    entry6.grid(row=4,column=1)

    entry7 = tkinter.Entry(window)
    entry7.grid(row=5,column=1)

    entry8 = tkinter.Entry(window)
    entry8.grid(row=6,column=1)

    entry9 = tkinter.Entry(window)
    entry9.grid(row=7,column=1)

    entry10 = tkinter.Entry(window)
    entry10.grid(row=8,column=1)

    entry11 = tkinter.Entry(window)
    entry11.grid(row=9,column=1)

    entry12 = tkinter.Entry(window)
    entry12.grid(row=10,column=1)



    def click():
        bal=0
        if entry3.get()==europe[f1]:
            bal=bal+1
        if entry4.get()==europe[f2]:
            bal=bal+1
        if entry5.get()==europe[f3]:
            bal=bal+1
        if entry6.get()==europe[f4]:
            bal=bal+1
        if entry7.get()==europe[f5]:
            bal=bal+1
        if entry8.get()==europe[f6]:
            bal=bal+1
        if entry9.get()==europe[f7]:
            bal=bal+1
        if entry10.get()==europe[f8]:
            bal=bal+1
        if entry11.get()==europe[f9]:
            bal=bal+1
        if entry12.get()==europe[f10]:
            bal=bal+1
        
        label13=tkinter.Label(window, text=bal)
        label13.grid(row=11,column=1)


    button1 = tkinter.Button(window, text='Проверить', command=click) 
    button1.grid(row=11,column=0)

    button2 = tkinter.Button(window, text='Выход', command=window.destroy) 
    button2.grid(row=12,column=0)
   
button31 = tkinter.Button(window1, text='Европа', command=EUROPA) 
button31.grid(row=4,column=0)

