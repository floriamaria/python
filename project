            bal=bal+1
        
        label13=tkinter.Label(window, text=bal)
        label13.grid(row=11,column=1)


    button1 = tkinter.Button(window, text='Проверить', command=click) 
    button1.grid(row=11,column=0)

    button2 = tkinter.Button(window, text='Выход', command=window.destroy) 
    button2.grid(row=12,column=0)
   
button31 = tkinter.Button(window1, text='Африка', command=AFRIKA) 
button31.grid(row=7,column=0)

###Регионы РФ

def RF():
    A=list(russia.keys()) 
    window1.destroy
    window = tkinter.Tk()
    window.geometry("350x350")
    window.title("Проверка знаний")

    label1=tkinter.Label(window, text="Регион РФ")
    label1.grid(row=0,column=0)

    label2=tkinter.Label(window, text="Столица региона")
    label2.grid(row=0,column=1)

    f1=random.choice(A)
    A.remove(f1)

    f2=random.choice(A)
    A.remove(f2)

    f3=random.choice(A)
    A.remove(f3)

    f4=random.choice(A)
    A.remove(f4)

    f5=random.choice(A)
    A.remove(f5)
    
    f6=random.choice(A)
    A.remove(f6)

    f7=random.choice(A)
    A.remove(f7)

    f8=random.choice(A)
    A.remove(f8)

    f9=random.choice(A)
    A.remove(f9)

    f10=random.choice(A)
    A.remove(f10)

    label3=tkinter.Label(window, text=f1)
    label3.grid(row=1,column=0)

    label4=tkinter.Label(window, text=f2)
    label4.grid(row=2,column=0)

    label5=tkinter.Label(window, text=f3)
    label5.grid(row=3,column=0)

